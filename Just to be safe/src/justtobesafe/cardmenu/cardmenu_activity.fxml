<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="CardMenu" prefHeight="480.0" prefWidth="640.0" stylesheets="@../../resources/dark-theme.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="justtobesafe.cardmenu.CardMenuController">
    <children>
        <Button fx:id="logoutBtn" layoutX="507.0" layoutY="415.0" mnemonicParsing="false" onMouseClicked="#onLogoutButtonClicked" prefHeight="39.0" prefWidth="114.0" styleClass="logout-button" text="Logout" />
        <Button fx:id="homeBtn" layoutX="382.0" layoutY="415.0" mnemonicParsing="false" onMouseClicked="#onHomeButtonClicked" prefHeight="39.0" prefWidth="114.0" styleClass="card-button" text="Home" />
        <AnchorPane fx:id="cardBtn" layoutX="382.0" layoutY="21.0" prefHeight="310.0" prefWidth="239.0" styleClass="upper-layer">
            <children>
                <Label layoutX="45.0" layoutY="14.0" styleClass="title-label" text="Credit Card Database" />
                <ListView layoutY="45.0" prefHeight="335.0" prefWidth="239.0" styleClass="upper-layer">

                </ListView>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="14.0" layoutY="22.0" prefHeight="437.0" prefWidth="348.0" styleClass="upper-layer">
            <children>
                <Label layoutX="106.0" layoutY="14.0" styleClass="title-label" text="Credit Card Display" />
                <AnchorPane layoutX="15.0" layoutY="64.0" prefHeight="208.0" prefWidth="318.0" styleClass="card-layer">
               <children>
                      <TextField fx:id="cardName_field" layoutX="14.0" prefHeight="39.0" prefWidth="286.0" promptText="My Credit Card" styleClass="card-field" />
                      <TextField fx:id="cardNum_field" layoutX="14.0" layoutY="65.0" onKeyTyped="#cardnumOnKeyTyped" prefHeight="39.0" prefWidth="217.0" promptText="XXXX-XXXX-XXXX-XXXX" styleClass="card-field" />
                      <TextField fx:id="expiry_field" layoutX="14.0" layoutY="123.0" prefHeight="32.0" prefWidth="80.0" promptText="MM/YY" styleClass="card-field" />
                      <TextField fx:id="cvv_field" layoutX="129.0" layoutY="123.0" prefHeight="32.0" prefWidth="63.0" promptText="888" styleClass="card-field" />
                      <TextField fx:id="cardholder_field" layoutX="14.0" layoutY="155.0" prefHeight="39.0" prefWidth="94.0" promptText="John Doe" styleClass="card-field" />
               </children></AnchorPane>
                <Button fx:id="setBtn" layoutX="14.0" layoutY="382.0" mnemonicParsing="false" onMouseClicked="#onSetButtonClicked" prefHeight="39.0" prefWidth="114.0" styleClass="highlighted-button" text="Add Card" />
                <Button fx:id="clearBtn" layoutX="220.0" layoutY="382.0" mnemonicParsing="false" onMouseClicked="#onClearButtonClicked" prefHeight="39.0" prefWidth="114.0" styleClass="reg-button" text="Clear" />
                <Button fx:id="copyBtn" layoutX="73.0" layoutY="297.0" mnemonicParsing="false" onMouseClicked="#onCopyButtonClicked" prefHeight="39.0" prefWidth="202.0" styleClass="copy-button" text="Copy to clipboard" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
